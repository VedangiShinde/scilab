
//Trapezoid rule 
x1=0
xn=1
h=0.125
n=(xn-x1)/h
x=linspace(0,1,(n+1))
y=1./(x+1)
y1=sum(y(2:n))
i=h*(y(1)+2*y1+y(n+1))/2
